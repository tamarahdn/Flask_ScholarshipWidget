{
  "name": "escapido_widget",
  "version": "1.0.0",
  "description": "Your custom Notion Events Widget",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.escapido.widget",
    "productName": "EscapidoWidget",
    "files": [
      "main.js",
      "package.json",
      "node_modules/",
      "dist/app.exe",  
      "templates/**/*",
      "static/**/*"
    ],
    "extraResources": [
      {
        "from": "templates",
        "to": "templates"
      },
      {
        "from": "static",
        "to": "static"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^10.0.1"
  }
}
